# Application Configuration
APP_NAME="Cardpoint"
APP_URL="http://localhost"
APP_SECRET="your-random-secret-key-change-this"
DEBUG=true

# Stripe Payment Configuration
# Get these keys from your Stripe Dashboard (https://dashboard.stripe.com/apikeys)
# Leave empty to use demo/simulation mode
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# Database Configuration
DB_PATH="database/database.sqlite"

# Email Configuration (Optional)
# For Gmail SMTP (recommended for production):
# - MAIL_HOST=smtp.gmail.com
# - MAIL_PORT=587 (for TLS) or 465 (for SSL)
# - MAIL_USERNAME=your-email@gmail.com
# - MAIL_PASSWORD=your-app-password (see GMAIL.md for setup)
# - MAIL_ENCRYPTION=tls (or ssl for port 465)
# - MAIL_FROM_ADDRESS=your-email@gmail.com
# - MAIL_FROM_NAME=Your Store Name
#
# For development (Mailpit/local):
# - Leave these empty or use localhost:1025
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=
MAIL_FROM_NAME=

# Cron Job Security
# Generate a random string for security (e.g., openssl rand -base64 32)
CRON_SECRET_KEY=change-this-to-random-string