# Application Configuration
APP_NAME="Cardpoint"
APP_URL="http://localhost"
APP_SECRET="your-random-secret-key-change-this"
DEBUG=true

# Stripe Payment Configuration
# Get these keys from your Stripe Dashboard (https://dashboard.stripe.com/apikeys)
# Leave empty to use demo/simulation mode
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# Database Configuration
DB_PATH="database/database.sqlite"

# Email Configuration (Optional)
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=
MAIL_FROM_NAME=

# Cron Job Security
# Generate a random string for security (e.g., openssl rand -base64 32)
CRON_SECRET_KEY=change-this-to-random-string